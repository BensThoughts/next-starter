generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model AllGames {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  games Game[]
}

model Game {
  id    String   @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  appid String
  game  AllGames @relation(fields: [appid], references: [id])
}
